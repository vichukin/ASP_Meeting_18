@{
}
<h1>Change roles for user @Model.Username</h1>
<form asp-action="ChangeUserRoles" asp-controller="Roles" method="post">
    <input name="id" type="hidden" value="@Model.UserId" />
    @foreach(var role in Model.AllRoles)
    {
        <input type="checkbox" 
            @(Model.UserRoles.Contains(role.Name)?"Checked":"")
            name="roles"
            value="@role.Name"
            />@role.Name<br />

    }
    <input type="submit" value="Save" class="btn btn-success"/>
    <hr />
    <a asp-action="UserList" asp-controller="Roles" class="btn btn-secondary">Back to list</a>
</form>