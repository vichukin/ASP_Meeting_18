@{
}
@model LoginViewModel
<form asp-action="Login" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-3">
        <label asp-for="Login" class="form-label"> </label>
        <input asp-for="Login" class="form-control" />
        <span asp-validation-for="Login" class="text-danger"></span>
    </div>
    
    <div class="mb-3">
        <label asp-for="Password" class="form-label"> </label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="IsPersistent" class="form-label"> </label>
        <input asp-for="IsPersistent" class="form-check type="checkbox" />
    </div>
    <input asp-for="ReturnUrl" type="hidden" />
    <input type="submit" class="btn btn-success" value="Sign in" />
    <a asp-action="Register" asp-controller="Account" class="btn btn-primary">Register</a>
    <a asp-action="GoogleAuth" asp-controller="Account" class="btn btn-outline-primary">Login with Google</a>
    <a asp-action="FbAuth" asp-controller="Account" class="btn btn-outline-primary">Login with Facebook</a>
</form>